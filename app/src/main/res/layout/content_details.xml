<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.plex.vfix.activities.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.plex.vfix.activities.DetailsActivity"
        tools:showIn="@layout/activity_details">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="@string/fix_title"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_problem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="交换机爆炸"
                android:textSize="17dp" />

        </LinearLayout>

        <View
            android:layout_width="342dp"
            android:layout_height="0.3dp"
            android:layout_gravity="end"
            android:background="#888888"
            tools:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="申请时间"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_start_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="2017-09-09 17:23:51"
                android:textSize="17dp" />

        </LinearLayout>

        <View
            android:layout_width="342dp"
            android:layout_height="0.3dp"
            android:layout_gravity="end"
            android:background="#888888"
            tools:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="更新时间"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_update_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="2017-09-09 17:23:51"
                android:textSize="17dp" />

        </LinearLayout>

        <View
            android:layout_width="342dp"
            android:layout_height="0.3dp"
            android:layout_gravity="end"
            android:background="#888888"
            tools:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:text="进度"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="未处理"
                android:textSize="17dp" />

        </LinearLayout>

        <View
            android:layout_width="342dp"
            android:layout_height="0.3dp"
            android:layout_gravity="end"
            android:background="#888888"
            tools:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="地址"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="--"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:layout_width="342dp"
            android:layout_height="0.3dp"
            android:layout_gravity="end"
            android:background="#888888"
            tools:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="问题具体描述"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="无"
                android:textSize="14dp"/>

        </LinearLayout>

        <View
            android:layout_width="342dp"
            android:layout_height="0.3dp"
            android:layout_gravity="end"
            android:background="#888888"
            tools:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="问题反馈"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/details_resolve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="无"
                android:textSize="14dp"/>

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="342dp"-->
            <!--android:layout_height="0.3dp"-->
            <!--android:layout_gravity="end"-->
            <!--android:background="#888888"-->
            <!--tools:layout_gravity="right" />-->



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
